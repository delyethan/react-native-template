{
  "compilerOptions": {
    "resolveJsonModule": true,
    "declaration": false,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "module": "ESNext",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "experimentalDecorators": true,
    "noImplicitAny": true
  },
  "exclude": ["node_modules"]
}
